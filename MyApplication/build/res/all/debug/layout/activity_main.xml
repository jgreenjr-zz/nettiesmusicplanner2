<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food"
        android:id="@+id/foodTextView"
            />

    <Spinner android:id="@+id/food_spinner"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/foodTextView"            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water"
            android:id="@+id/waterTextView"
            android:layout_below="@+id/food_spinner"
          />

    <Spinner android:id="@+id/water_spinner"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/waterTextView"
             android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep"
            android:id="@+id/sleepTextView"
            android:layout_below="@+id/water_spinner"
            />

    <Spinner android:id="@+id/sleep_spinner"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/sleepTextView"
             android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:id="@+id/exerciseTextView"
            android:layout_below="@+id/sleep_spinner"
            />

   <EditText android:id="@+id/exercise_editText"
             android:layout_height="wrap_content"
             android:layout_width="fill_parent"
             android:layout_below="@+id/exerciseTextView"
           />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitButton"
            android:id="@+id/button"
            android:layout_below="@+id/exercise_editText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendSMS"
        android:id="@+id/button2"
        android:layout_below="@+id/button"/>

</RelativeLayout>
